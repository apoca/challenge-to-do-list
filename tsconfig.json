{
    "compilerOptions": {
        "strict": true,
        "lib": ["es2021"],
        "module": "commonjs",
        "target": "es2021",
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "types": ["node", "jest", "./src/types/fastify"],
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
