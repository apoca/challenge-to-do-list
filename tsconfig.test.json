{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./build-test",
        "module": "commonjs",
        "target": "es2021",
        "types": ["jest", "node"],
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "tests/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
